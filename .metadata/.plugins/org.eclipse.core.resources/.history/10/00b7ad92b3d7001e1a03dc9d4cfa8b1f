package com.example.vehicle.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.vehicle.dto.VehicleDto;
import com.example.vehicle.service.JwtService;
import com.example.vehicle.service.VehicleService;

@RestController
@RequestMapping("/api/vehicle")
public class VehicleController {

	@Autowired
	private VehicleService vehicleService;

	@Autowired
	private JwtService jwtService; // Inject JwtService

	@PostMapping("/addVehicle")
    public String saveVehicle(@RequestBody VehicleDto vehicleDto, @RequestHeader("Authorization") String jwtToken) {
        // Validate and extract token logic
        if (jwtToken != null && jwtToken.startsWith("Bearer ")) {
            String token = jwtToken.substring(7);
            Object principal = jwtService.validateTokenAndGetClaims(token);
            if (principal != null) {
                // Token is valid, and claims can be accessed
                // Additional validation as needed
                return vehicleService.addVehicle(vehicleDto);
            } else {
                // Token is not valid or not present
                throw new RuntimeException("Invalid or missing JWT token");
            }
        } else {
            throw new RuntimeException("Invalid or missing JWT token");
        }
    }


	@GetMapping("/vehicle/{id}")
	public VehicleDto getVehicleById(@PathVariable int id) {
		return vehicleService.viewVehicleById(id);
	}

	@GetMapping("/allVehicles")
	public List<VehicleDto> getAllVehicles() {
		List<VehicleDto> vehicles = vehicleService.viewAll();
		return vehicles;
	}

	@PutMapping("/vehicle/{id}")
	public String updateVehicle(@PathVariable int id, @RequestBody VehicleDto vehicleDto) {
		return vehicleService.modifyVehicleById(id, vehicleDto);
	}

	@DeleteMapping("/vehicle/{id}")
	public String updateVehicle(@PathVariable int id) {
		return vehicleService.deleteVehicle(id);
	}

}
