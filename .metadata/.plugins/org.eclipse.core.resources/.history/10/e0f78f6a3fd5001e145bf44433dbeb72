package com.example.ata.client;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.example.ata.dto.RouteDto;

@FeignClient(name="ROUTE-MICROSERVICES", url="http://localhost:8085/api/route")
public interface RouteClient {
	
	@GetMapping("/all/{source}")
	public List<RouteDto> viewRoutesBySource(@PathVariable String source);
	

}
