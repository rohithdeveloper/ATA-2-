package com.example.demo.apigateway;

import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class GatewayCongfig {
	
	@Bean
    public RouteLocator gatewayRoutes(RouteLocatorBuilder builder) {
        return builder.routes()
                .route("registration-service", r -> r
                        .path("/api/user/**")
                        .uri("lb://registration-service")) // Assuming registration-service is the service ID of your registration microservice
                .build();
    }

}
